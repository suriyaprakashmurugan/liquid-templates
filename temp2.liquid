<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ siteData.title }}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/95dc93da07.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap");

      body {
        font-family: "Poppins", sans-serif;
        margin: 0;
        padding: 0;
        color: #334155;
        background-color: #f1f5f9;
      }

      * {
        box-sizing: border-box;
        scroll-behavior: smooth;
      }

      header {
        background: #0f172a;
        padding: 1rem 0;
        position: fixed;
        width: 100%;
        z-index: 1000;
      }

      #logo {
        font-size: 1.75rem;
        font-weight: 700;
        color: #0ea5e9;
        text-decoration: none;
      }

      #nav-menu {
        list-style: none;
        display: flex;
        gap: 24px;
      }

      #nav-menu li a {
        color: #f1f5f9;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
      }

      #nav-menu li a:hover {
        color: #0ea5e9;
      }

      #hero {
        display: flex;
        flex-direction: row-reverse;
        align-items: center;
        justify-content: center;
        padding: 100px 20px;
        gap: 40px;
        background-color: #0ea5e9;
        color: #fff;
      }

      #hero img {
        width: 50%;
        border-radius: 12px;
      }

      #hero .hero-text {
        max-width: 500px;
      }

      #hero h1 {
        font-size: 2.75rem;
        margin-bottom: 1rem;
      }

      #hero p {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
      }

      button.cta {
        background: #334155;
        border: none;
        color: #fff;
        font-size: 16px;
        border-radius: 12px;
        padding: 14px 40px;
        cursor: pointer;
        transition: background 0.3s ease;
      }

      button.cta:hover {
        background: #1e293b;
      }

      #about, #testimonials, #services, footer {
        padding: 4rem 20px;
      }

      #about {
        background: #fff;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 40px;
      }

      #about img {
        width: 50%;
        border-radius: 12px;
      }

      #testimonials {
        background: #e2e8f0;
      }

      #services .products-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
      }

      .product-card {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
      }

      .product-card:hover {
        transform: translateY(-8px);
      }

      footer {
        background: #0f172a;
        color: #f1f5f9;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container flex">
        <a id="logo" href="/">{{ siteData.logoText }}</a>
        <nav>
          <ul id="nav-menu">
            {% for item in siteData.navMenu %}
              <li><a href="{{ item.url }}">{{ item.label }}</a></li>
            {% endfor %}
          </ul>
        </nav>
      </div>
    </header>

    <section id="hero">
      <img src="{{ heroData.image }}" alt="Hero Image" loading="lazy">
      <div class="hero-text">
        <h1>{{ heroData.title }}</h1>
        <p>{{ heroData.description }}</p>
        <button class="cta">Get Started</button>
      </div>
    </section>

    <section id="about">
      <img src="{{ aboutUs.image }}" alt="About Us Image" loading="lazy">
      <div>
        <h2>{{ aboutUs.title }}</h2>
        <p>{{ aboutUs.description }}</p>
      </div>
    </section>

    <section id="testimonials">
      <div class="container">
        <h2>{{ testimonialsData.title }}</h2>
        <div id="testimonials-slider"></div>
      </div>
    </section>

    <section id="services">
      <div class="container">
        <h2>{{ productsData.title }}</h2>
        <div class="products-container">
          {% for product in productsData.items %}
            <div class="product-card">
              <img src="{{ product.image }}" alt="{{ product.name }}">
              <div class="product-content">
                <h3>{{ product.name }}</h3>
                <p>{{ product.description }}</p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <footer>
      <div class="container">
        <p>&copy; {{ siteData.title }}. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
